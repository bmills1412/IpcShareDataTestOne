<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="paintViewStyle">@style/PaintViewStyle</item>
    </style>

    <style name="PaintViewStyle">
        <item name="thumbStrokeSize">@dimen/defaultStrokeSize</item>
        <item name="thumbStrokeColor">@color/defaultStrokeColor</item>
    </style>

    <style name="extendedActionViewDefaultStyle">
        <item name="thumbColor">@color/extendedThumbColor</item>
        <item name="trackColor">@color/extendedTrackColor</item>
        <item name="itemSpacing">@dimen/itemSpacing</item>
        <item name="thumbWidth">100dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>



